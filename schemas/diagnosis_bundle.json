{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DiagnosisBundle",
  "type": "object",
  "required": [
    "event_id",
    "region",
    "site_id",
    "likely_cause",
    "evidence",
    "confidence",
    "trace_id",
    "explanation"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "region": {
      "type": "string",
      "minLength": 1
    },
    "site_id": {
      "type": "string",
      "minLength": 1
    },
    "likely_cause": {
      "type": "string",
      "enum": [
        "backhaul_congestion",
        "radio_overload",
        "dns_flap",
        "fiber_cut",
        "noisy_neighbor",
        "maintenance",
        "unknown"
      ]
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 10
    },
    "alternative_causes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 3
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "ttl": {
      "type": "integer",
      "minimum": 0,
      "default": 300
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "explanation": {
      "type": "string",
      "minLength": 120,
      "maxLength": 540
    }
  },
  "additionalProperties": false
}
