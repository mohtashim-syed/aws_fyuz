{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RecommendationPlan",
  "type": "object",
  "required": [
    "event_id",
    "region",
    "site_id",
    "actions",
    "rollback",
    "trace_id"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "region": {
      "type": "string",
      "minLength": 1
    },
    "site_id": {
      "type": "string",
      "minLength": 1
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "action",
          "mode"
        ],
        "properties": {
          "action": {
            "type": "string",
            "minLength": 1
          },
          "params": {
            "type": "object"
          },
          "mode": {
            "type": "string",
            "enum": [
              "safe",
              "aggressive"
            ]
          }
        }
      },
      "minItems": 1,
      "maxItems": 5
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 5
    },
    "rollback": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
