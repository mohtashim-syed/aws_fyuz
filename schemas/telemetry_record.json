{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TelemetryRecord",
  "type": "object",
  "required": [
    "timestamp",
    "region",
    "site_id",
    "packet_loss_pct",
    "latency_ms",
    "jitter_ms",
    "cpu_load_pct",
    "mem_used_pct",
    "calls_dropped",
    "throughput_mbps",
    "backhaul_util_pct",
    "trace_id"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp"
    },
    "region": {
      "type": "string",
      "minLength": 1
    },
    "site_id": {
      "type": "string",
      "minLength": 1
    },
    "packet_loss_pct": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "latency_ms": {
      "type": "number",
      "minimum": 0
    },
    "jitter_ms": {
      "type": "number",
      "minimum": 0
    },
    "cpu_load_pct": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "mem_used_pct": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "calls_dropped": {
      "type": "integer",
      "minimum": 0
    },
    "throughput_mbps": {
      "type": "number",
      "minimum": 0
    },
    "backhaul_util_pct": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
